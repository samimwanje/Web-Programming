{{#if issue}}
  <div class="d-flex bd-highlight mb-3">
      <div class="me-auto p-2 bd-highlight">
          <h2>Issue: {{issue.title}} </h2>
      </div>
      <div class="p-2 bd-highlight">
          <button type="button" class="btn btn-secondary" onclick="history.back()">Back</button>
      </div>
  </div>
  <div class="container mt-4" style="color:black;">
      <div class="card">
          <div class="card-header"> View Issue </div>
          <div class="card-body">
              <div class="mb-3">
                  <textarea readonly rows="4" cols="117" class="form-control" name="description" aria-describedby="descriptionHelp">{{issue.description}}</textarea>
                  <div id="descriptionHelp" class="form-text">The issue is created by {{issue.author.name}}. <br> {{issue.created_at}}. </div>
                  {{#if comments}}
                    <br>
                    <h5 style="color:black; text-align: center;">COMMENTS</h5>
                  {{/if}}
                  {{#each comments}}
                    <textarea readonly rows="1" cols="117" class="form-control" name="comment" aria-describedby="commentHelp">{{this.body}}</textarea>
                    <div id="commentHelp" class="form-text">Comment created by {{this.author.name}}. <br> {{this.created_at}}. </div>
                    <br>
                  {{/each}}
              </div>
          </div>
      </div>
  </div>
{{/if}}